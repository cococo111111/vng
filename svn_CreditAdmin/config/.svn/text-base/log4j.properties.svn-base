# Root logger option
log4j.rootLogger=INFO, rootLog
 
# Direct log messages to a log rootLog
log4j.appender.rootLog=org.apache.log4j.RollingFileAppender
log4j.appender.rootLog.File=/zserver/log/creditadmin/system.log
log4j.appender.rootLog.MaxFileSize=1MB
log4j.appender.rootLog.MaxBackupIndex=1
log4j.appender.rootLog.layout=org.apache.log4j.PatternLayout
log4j.appender.rootLog.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n