        <script>
            var _url = '{{_url}}';
            var _t = '{{_t}}';
            
            zmXCall.register('reload', function(url) {
                if(url == undefined || url == "") { 
                    window.location.reload();
                } else { 
                    if(url.indexOf("index?_v=3") > 0) { 
                        processCallBack();
                        return;
                    } else {
                        window.location.href = url;
                    }
                }
                // auto close afer 5 seconds
                setTimeout(processCallBack, 3000);

            });
            
            function back2Billing(bill_url)
            {
                 window.location.href = bill_url;
        
            }
            
            function processCallBack () {
                switch (_t) {
                    case  '1' : // popup
                        try {
                            if(_url) {
                                window.opener.location.href = _url;
                            } else {
                                window.opener.location.reload();
                            }
                        } catch(exception){}
                        
                        window.close();
                        break;
                     case  '2' : // boxy
                        zmXCall.callParent('callbackDeposit', _url, {host: "{{CREDITS_URL}}"});
                        break;
                     case  '3' : // direct page
                        window.location.href = _url;
                        break;
                     case  '4' : // iframe
                        zmXCall.callParent('callbackDeposit', _url, {host: "{{CREDITS_URL}}"});
                        break;
                     default :
                        zmXCall.callParent('callbackDeposit', _url, {host: "{{CREDITS_URL}}"});
                }
            }
            
        </script>
