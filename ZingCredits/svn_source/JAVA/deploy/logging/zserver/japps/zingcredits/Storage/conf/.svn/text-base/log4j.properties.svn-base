#
# Storage Logging Configuration
#

log4j.appender.appActionsAppender = org.apache.log4j.FileAppender
log4j.logger.appActions = INFO, appActions
log4j.logger.appActions.additivity = false
log4j.appender.appActions = org.apache.log4j.RollingFileAppender
log4j.appender.appActions.File = /zserver/log/zingcredits/storage.log
log4j.appender.appActions.Append = true
log4j.appender.appActions.Threshold = INFO
log4j.appender.appActions.MaxFileSize = 15MB
log4j.appender.appActions.MaxBackupIndex = 15
log4j.appender.appActions.layout = org.apache.log4j.PatternLayout
log4j.appender.appActions.layout.ConversionPattern = %d{ISO8601} - %-5p [%t:%C{1}@%L] - %m%n

log4j.appender.infoActionsAppender = org.apache.log4j.FileAppender
log4j.logger.infoActions = INFO, infoActions
log4j.logger.infoActions.additivity = false
log4j.appender.infoActions = org.apache.log4j.RollingFileAppender
log4j.appender.infoActions.File = /zserver/log/zingcredits/info/storage_info.log
log4j.appender.infoActions.Append = true
log4j.appender.infoActions.Threshold = INFO
log4j.appender.infoActions.MaxFileSize = 15MB
log4j.appender.infoActions.MaxBackupIndex = 15
log4j.appender.infoActions.layout = org.apache.log4j.PatternLayout
log4j.appender.infoActions.layout.ConversionPattern = %d{ISO8601} - %-5p [%t:%C{1}@%L] - %m%n

